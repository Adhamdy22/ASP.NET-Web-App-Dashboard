@using ViewModel.Categories
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddCategoryViewModel

@{
    ViewData["Title"] = "Add New Category";
}
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<form asp-action="AddNewCategory" method="post">
    <partial name="_Notification" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-area="Categories" asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="width:150px">
            Back to Categories
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


