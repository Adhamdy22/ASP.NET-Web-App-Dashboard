@using Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Category
@{
    ViewData["Title"] = "Delete Category";
}
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<form asp-action="DeleteCategory" method="post">
    @Html.AntiForgeryToken() <!-- Include Anti-Forgery Token -->
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Model.Name</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <br />
        <a asp-area="Categories" asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="width:150px">
            Back to Categories
        </a>
        <button type="submit" class="btn btn-danger btn-sm" style="width:150px"
                onclick="return confirmDelete()">
            Delete
        </button>


    </div>
</form>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this item? This action cannot be undone.");
    }
</script>

