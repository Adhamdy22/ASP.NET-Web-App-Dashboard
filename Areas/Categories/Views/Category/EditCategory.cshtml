@using Models
@model Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditItem";
}
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<form method="post" asp-action="EditCategory">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"> </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        </br>
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-area="Categories" asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="width:150px">
            Back to Items
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}

